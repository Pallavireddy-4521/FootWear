</head>
<body class="hold-transition sidebar-mini">
	
	<div class="wrapper">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
			<a href="#" class="brand-link">
			  <img src="Bata-Logo.jpg"
				   alt="Bata Logo"
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">Caring for your feet</span>
			</a>
			<!-- Sidebar -->
			<div class="sidebar">
				<!-- Sidebar Menu -->
				<nav class="mt-2">
					<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
						<li class="nav-item">
							<a href="/create" class="nav-link">
								<i class="nav-icon far fa-circle text-info"></i>
								<p>Add Product</p>
							</a>
						</li>
						<li class="nav-item">
							<a href="/stock_details" class="nav-link">
								<i class="nav-icon far fa-circle text-info"></i>
								<p class="text">Stock Details</p>
							</a>
						</li>
						<li class="nav-item">
							<a href="/updatestock" class="nav-link">
								<i class="nav-icon far fa-circle text-info"></i>
								<p class="text">Update Stock</p>
							</a>
						</li>
					</ul>
				</nav>
				<!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>
		
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			
			<section class="content-header">
				<h1>Bata Inventory Management System</h1>
			</section>
			
			<section class="content">
				<div class="card">
					<div class="card-header">
					  <h3 class="card-title">Add new product</h3>
					</div>
					<div class="card-body table-responsive p-0" style="height: 400px;">
                        <form action="/AddData" method="POST">
							<br>
                            <label>Product Id:</label>
                            <input type="number" placeholder="Enter product id" name="Pid"><br>
                            <label>Product Category:</label>&nbsp;
                            <input type="text" placeholder="Enter category" name="Category"><br>
                            <label>Type of product:</label>&nbsp;
                            <input type="text" placeholder="Enter type" name="Type"><br>
                            <label>Size:</label>
                            <input type="number" placeholder="Enter size" name="Size"><br>
                            <label>Stock:</label>
                            <input type="number" placeholder="Enter quantity" name="Stock"><br>
                            <label>Cost price:</label>
                            <input type="number" placeholder="Enter cost price" name="Cprice"><br>
                            <label>Selling price:</label>
                            <input type="number" placeholder="Enter selling price" name="Sprice"><br>
                            <button type="submit">Add</button>
                        </form>
						</div>
				</div>
			</section>
		</div>
		
	</div>
